  <button id="startBtn">Click for Surprise üíù</button>  <script>
    const messages = [
      "Hey...",
      "It's your birthday, and I couldn't stay silent.",
      "We don't talk now, and maybe that's okay.",
      "But I still remember the smile you had.",
      "So here I am, just to say one thing‚Äî",
      "üéÇ Happy Birthday üéÇ",
      "No drama, no pressure.",
      "Just a simple wish from someone who once cared a lot.",
      "Hope you smile today. That‚Äôs all."
    ];

    const msgDiv = document.getElementById('message');
    const btn = document.getElementById('startBtn');

    btn.onclick = () => {
      btn.style.display = 'none';
      let i = 0;
      const interval = setInterval(() => {
        if (i < messages.length) {
          msgDiv.textContent = messages[i];
          i++;
        } else {
          clearInterval(interval);
        }
      }, 2500);
    };
  </script></body>
